{
  // Vim 配置
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.cursorStylePerMode.normal": "underline",
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [{ "before": ["j", "k"], "after": ["<esc>"] }],
  "vim.normalModeKeyBindings": [
    // leader related
    {
      "before": ["leader", "j"],
      "commands": ["extension.vim_ctrl+o"],
      "comment": "光标往后跳转"
    },
    {
      "before": ["leader", "k"],
      "commands": ["extension.vim_ctrl+i"],
      "comment": "光标往前跳转"
    },
    {
      "before": ["leader", "h"],
      "commands": [":tabp"],
      "comment": "前一个标签页"
    },
    {
      "before": ["leader", "l"],
      "commands": [":tabn"],
      "comment": "后一个标签页"
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.save"],
      "comment": "调用内置文件保存"
    },
    {
      "before": ["leader", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"],
      "comment": "Sidebar 显示和隐藏"
    },
    {
      "before": ["leader", "a"],
      "commands": ["workbench.action.toggleActivityBarVisibility"],
      "comment": "左侧工具栏显示和隐藏"
    },
    {
      "before": ["leader", "f"],
      "commands": ["revealInExplorer"],
      "comment": "显示左侧资源管理器并选中该文件"
    },
    {
      "before": ["leader", "x"],
      "commands": [":q"],
      "comment": "关闭文件"
    },
    // 快速移动
    { "before": ["H"], "after": ["^"] },
    { "before": ["L"], "after": ["$"] },
    { "before": [";"], "after": ["%"] },
    // 折行
    { "before": ["K"], "commands": ["lineBreakInsert"], "slient": true },
    // 使用内置撤销和重做
    { "before": ["u"], "commands": ["undo"] },
    { "before": ["U"], "commands": ["redo"] }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": ["<C-h>"], "after": ["<left>"] },
    { "before": ["<C-l>"], "after": ["<right>"] }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    { "before": ["H"], "after": ["^"] },
    { "before": ["L"], "after": ["$"] },
    { "before": ["("], "after": ["i", "("] },
    { "before": ["'"], "after": ["i", "'"] },
    { "before": ["["], "after": ["i", "["] },
    { "before": ["{"], "after": ["i", "{"] }
  ],
  "vim.handleKeys": {
    "<C-p>": false, // 转到文件
    "<C-k>": false, // 组合键前缀
    "<C-a>": false, // 全选
    "<C-j>": false // Terminal 显示和隐藏
  }
}